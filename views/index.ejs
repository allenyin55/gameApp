<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Game Web Application</title>
  <link rel="stylesheet" href="css/foundation.css">
  <link rel="stylesheet" href="foundation-icons/foundation-icons.css" />
  <link rel="stylesheet" href="css/app.css">
</head>
<body>


<!-- DESKTOP NAVIGATION -->

<div class="top-bar">
  <div class="top-bar-left">
    <h5 class="top-bar-name">Game Web Application</h5>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <li><a href="/login" class="btn btn-default"><span class="fi-torso"></span> Local Login</a></li>
      <li><a href="/signup" class="btn btn-default"><span class="fi-torso"></span> Local Signup</a></li>
      <li><a href="/auth/facebook" class="btn btn-primary"><span class="fi-social-facebook"></span> Facebook</a></li>
      <li><input type="search" placeholder="Search"></li>
      <li><button type="button" class="button">Search</button></li>
    </ul>
  </div>
</div>


<!-- HERO SECTION -->

<div class="row">
  <div class="small-6 large-10 columns"><!-- ... --></div>
  <div class="small-12 large-2 columns">
    <ul>
      <li id="chatBox">Chat Box</li>
    </ul>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
  </div>
</div>

<script src="js/vendor/jquery.js"></script>
<script src="js/vendor/what-input.js"></script>
<script src="js/vendor/foundation.js"></script>
<script src="js/app.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();
  $('form').submit(function(){
    socket.emit('chat message', $('#m').val());
    $('#m').val('');
    return false;
  });
  socket.on('chat message', function(msg){
    $('#messages').append($('<li>').text(msg));
  });
</script>
</body>
</html>
